<UserControl x:Class="Blog.WpfGui.Views.UserControls.PageTitleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blog.WpfGui.Views.UserControls"
             d:DataContext="{d:DesignInstance local:PageTitleControl, IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid x:Name="RootControl">
        <Border Style="{StaticResource PageTitleBorderStyle}">
            
            <TextBlock x:Name="TitleControl" 
                       Style="{StaticResource PageTitleTextStyle}"
                       Text="{Binding Title}" />
        </Border>
    </Grid>
</UserControl>
